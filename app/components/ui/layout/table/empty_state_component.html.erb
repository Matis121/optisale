<tr>
  <td colspan="100%" class="text-center py-16">
    <div class="max-w-sm mx-auto">
      <div class="w-20 h-20 bg-gradient-to-br from-secondary/10 to-accent/10 rounded-2xl flex items-center justify-center mx-auto mb-6">
        <i class="fas <%= icon %> text-3xl text-primary"></i>
      </div>
      <h3 class="text-xl font-semibold text-base-content mb-3"><%= title %></h3>
      <p class="text-base-content/60 mb-6">
        <%= paragraph %>
      </p>
      <%= link_to href, class: "btn btn-primary gap-2", data:(href_turbo ? { turbo_frame: "modal-frame" } : { turbo: false }) do %>
        <i class="fas fa-plus"></i>
        <%= text_button %>
      <% end %>
    </div>
  </td>
</tr>