<%= turbo_frame_tag dom_id(@order, :payment) do %>
  <% order_paid = @order.amount_paid.to_f == @order.total_price.to_f %>
  <div class="space-y-2">
    <div class="flex items-center gap-4">
      <span class="text-sm text-base-content/60">Zap≈Çacono:</span>
      <div class="flex items-center gap-2">
        <%= link_to(edit_payment_order_path(@order), class: "hover:text-primary transition-colors") do %>
          <span class="badge badge-sm <%= order_paid ? 'badge-success' : 'badge-error' %>">
            <%= number_to_currency(@order.amount_paid, unit: "PLN", format: "%n %u") %>
          </span>
        <% end %>
        <span class="text-sm text-base-content/60">z</span>
        <span class="text-sm font-medium text-base-content">
          <%= number_to_currency(@order.total_price, unit: "PLN", format: "%n %u") %>
        </span>
      </div>
    </div>
  </div>
<% end %>