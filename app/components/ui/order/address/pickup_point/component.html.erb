<%= turbo_frame_tag dom_id(pickup_point || CustomerPickupPoint.new) do %>
  <% if pickup_point.present? %>
    <div class="space-y-4">
      <div class="space-y-2">
        <div class="flex justify-between items-center">
          <span class="text-sm text-base-content/60">Nazwa:</span>
          <span class="text-sm font-medium text-base-content">
            <%= link_to(pickup_point.name.presence || "...", edit_order_customer_pickup_point_path(@order, pickup_point), data: { turbo_frame: dom_id(pickup_point) }, class: "hover:text-primary transition-colors") %>
          </span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-base-content/60">ID punktu:</span>
          <span class="text-sm font-medium text-base-content">
            <%= link_to(pickup_point.point_id.presence || "...", edit_order_customer_pickup_point_path(@order, pickup_point), data: { turbo_frame: dom_id(pickup_point) }, class: "hover:text-primary transition-colors") %>
          </span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-base-content/60">Adres:</span>
          <span class="text-sm font-medium text-base-content">
            <%= link_to(pickup_point.address.presence || "...", edit_order_customer_pickup_point_path(@order, pickup_point), data: { turbo_frame: dom_id(pickup_point) }, class: "hover:text-primary transition-colors") %>
          </span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-base-content/60">Kod i miasto:</span>
          <span class="text-sm font-medium text-base-content">
            <%= link_to([pickup_point.postcode, pickup_point.city].compact.join(' ').presence || "...", edit_order_customer_pickup_point_path(@order, pickup_point), data: { turbo_frame: dom_id(pickup_point) }, class: "hover:text-primary transition-colors") %>
          </span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-base-content/60">Kraj:</span>
          <span class="text-sm font-medium text-base-content">
            <%= link_to(pickup_point.country.presence || "...", edit_order_customer_pickup_point_path(@order, pickup_point), data: { turbo_frame: dom_id(pickup_point) }, class: "hover:text-primary transition-colors") %>
          </span>
        </div>
      </div>
    </div>
  <% else %>
    <div class="text-center py-8">
      <div class="w-12 h-12 bg-base-300 rounded-lg flex items-center justify-center mx-auto mb-3">
        <i class="fas fa-store text-base-content/40"></i>
      </div>
      <p class="text-sm text-base-content/60 mb-4">Brak punktu odbioru</p>
      <%= link_to edit_order_customer_pickup_point_path(@order, CustomerPickupPoint.new), 
          data: { turbo_frame: dom_id(CustomerPickupPoint.new) }, 
          class: "btn btn-primary btn-sm gap-2" do %>
        <i class="fas fa-plus"></i>
        Dodaj punkt
      <% end %>
    </div>
  <% end %>
<% end %>