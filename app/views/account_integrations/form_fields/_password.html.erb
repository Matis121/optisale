<div class="form-control">
  <%= label_tag field_id, field[:label], class: "label" %>
  <div class="space-y-2">
    <% if @account_integration.persisted? && field_value.present? %>
      <%= password_field_tag field_name, nil,
          id: field_id,
          class: "input input-bordered w-full #{'input-error' if has_error}",
          placeholder: "Pozostaw puste aby nie zmieniać" %>
      <span class="text-xs text-success">
        <i class="fas fa-check-circle mr-1"></i>
        Ustawiony. Pozostaw puste aby nie zmieniać.
      </span>
    <% else %>
      <%= password_field_tag field_name, nil,
          id: field_id,
          class: "input input-bordered w-full #{'input-error' if has_error}",
          placeholder: field[:placeholder],
          required: field[:required] %>
    <% end %>
    <% if has_error %>
      <span class="text-sm text-error">
        <%= @account_integration.errors[:"#{section[:store]}_#{field_key}"].first %>
      </span>
    <% end %>
    <% if field[:hint].present? %>
      <p class="text-xs text-base-content/60 leading-relaxed">
        <%= field[:hint] %>
      </p>
    <% end %>
  </div>
</div>
