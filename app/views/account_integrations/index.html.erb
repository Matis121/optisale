<% content_for :title, "Moje integracje" %>
<%= render "shared/integrations_tabs" %>
<%= render Ui::Layout::Container::DefaultComponent.new do %>
  <% if current_account.account_integrations.any? %>
    <div class="flex items-center justify-between mb-6">
      <div class="text-sm breadcrumbs text-base-content/60">
        <ul>
          <li>Moje integracje (<%= current_account.account_integrations.count %>)</li>
        </ul>
      </div>
      <%= link_to integrations_path, class: "btn btn-primary btn-sm gap-2 hidden sm:flex" do %>
        <i class="fas fa-plus"></i>
        Dodaj nowÄ…
      <% end %>
    </div>
    <div class="space-y-3">
      <%= render partial: "account_integration_card", 
                 collection: current_account.account_integrations.includes(:integration), 
                 as: :account_integration %>
    </div>
    <%# Mobile FAB %>
    <div class="fixed bottom-6 right-6 sm:hidden z-50">
      <%= link_to integrations_path, class: "btn btn-circle btn-primary shadow-lg" do %>
        <i class="fas fa-plus text-lg"></i>
      <% end %>
    </div>
  <% else %>
    <%= render "empty_state" %>
  <% end %>
<% end %>
