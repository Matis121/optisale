<%= render Ui::Layout::Table::DefaultComponent.new do |component| %>
  <% component.with_header(title: "Użytkownicy", href: new_manage_user_path, text_button: "Dodaj użytkownika") %>
  <% component.with_table_header do %>
    <thead>
      <tr>
        <th class="text-base-content font-semibold">Email</th>
        <th class="text-base-content font-semibold">Rola</th>
        <th class="text-base-content font-semibold">Data utworzenia</th>
        <th class="text-base-content font-semibold text-right">Akcje</th>
      </tr>
    </thead>
  <%end %>
  <% component.with_table_body do %>
    <tbody>
      <% @users.each do |user| %>
        <%= render "row", user: user %>
      <% end %>
    </tbody>
  <% end %>
<% end %>
