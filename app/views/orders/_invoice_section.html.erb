<%= turbo_frame_tag "invoice_section_#{order.id}" do %>
  <div class="flex justify-between items-center">
    <span class="text-sm text-base-content/60">Faktura:</span>
    <% if order.invoice.present? %>
      <div class="flex flex-col gap-1">
        <div class="flex items-center justify-between p-2 bg-base-200 rounded mb-2">
          <div class="flex items-center gap-1">
            <%= link_to order.invoice.download_pdf_url, target: "_blank", 
                          class: "btn btn-outline btn-sm gap-1", 
                          title: "Pobierz PDF" do %>
              <span class="text-sm font-medium"><%= order.invoice.invoice_number %></span>
            <% end %>
            <%= link_to delete_from_external_invoice_path(order.invoice), 
                          data: { turbo_method: :delete, 
                                 turbo_confirm: "Czy na pewno chcesz usunąć tę fakturę? Ta operacja jest nieodwracalna!",
                                 turbo_frame: "invoice_section_#{order.id}" },
                          class: "btn btn-ghost btn-xs text-base-content/40 hover:text-error hover:bg-error/10 transition-colors", 
                          title: "Usuń fakturę" do %>
              <i class="fas fa-trash text-xs"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% else %>
      <% invoice_service = InvoiceService.new(current_user) %>
      <% if invoice_service.has_active_invoicing_integration? %>
        <% if invoice_service.can_generate_invoice_for_order?(order) %>
          <%= link_to generate_invoice_order_path(order), 
                      data: { turbo_method: :post, turbo_frame: "invoice_section_#{order.id}" },
                      class: "btn btn-outline btn-sm gap-1" do %>
            <i class="fas fa-file-invoice"></i>
            Wystaw fakturę
          <% end %>
        <% else %>
          <div class="text-center">
            <button class="btn btn-outline btn-sm gap-1 btn-disabled" disabled>
              <i class="fas fa-file-invoice"></i>
              Wystaw fakturę
            </button>
            <div class="text-xs text-base-content/60 mt-1">
              <% if order.order_products.empty? %>
                Dodaj produkty do zamówienia
              <% elsif order.invoice.present? %>
                Faktura już istnieje
              <% else %>
                Nie można wygenerować faktury
              <% end %>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="text-center">
          <button class="btn btn-outline btn-sm gap-1 btn-disabled" disabled>
            <i class="fas fa-file-invoice"></i>
            Wystaw fakturę
          </button>
          <div class="text-xs text-base-content/60 mt-1">
            <%= link_to "Skonfiguruj integrację", integrations_path, class: "link link-primary", data: { turbo_frame: "_top" } %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
