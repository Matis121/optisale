<!-- Top section -->
<div class="flex flex-col gap-6" data-controller="checkbox-selection" data-checkbox-selection-target="parent" data-status="<%= params[:status] || 'all' %>" data-checkbox-selection-total-orders-value="<%= @orders.total_count %>">
  <div class="bg-base-100/50 rounded-lg border border-base-200">
    <!-- BLOK 1: Bulk Actions -->
    <%= form_with url: bulk_update_orders_path, method: :patch, data: { checkbox_selection_target: "form", action: "turbo:submit-end->checkbox-selection#clearCheckboxes" } do |f|  %>
      <div class="flex items-center gap-3 p-4">
        <div class="dropdown dropdown-down">
          <label tabindex="0" class="btn btn-ghost btn-sm border border-base-200 gap-2">
            <div class="badge badge-xs badge-primary hidden" data-checkbox-selection-target="counter">0</div>
            <i class="fas fa-check-square text-sm"></i>
            Zaznacz
          </label>
          <ul tabindex="0" class="dropdown-content menu p-2 shadow-lg bg-base-100 rounded-lg w-48 border border-base-200">
            <li>
              <button data-action="click->checkbox-selection#selectAllOnPage" type="button" onclick="document.activeElement.blur()" class="text-sm">
                Zaznacz wszystkie na stronie
              </button>
            </li>
            <li>
              <button data-action="click->checkbox-selection#deselectAll" type="button" onclick="document.activeElement.blur()" class="text-sm">
                Odznacz wszystkie
              </button>
            </li>
          </ul>
        </div>
        <div class="dropdown dropdown-down">
          <label tabindex="0" class="btn btn-ghost btn-sm border border-base-200 gap-2">
            <i class="fas fa-flag text-sm"></i>
            Zmień status
          </label>
          <ul tabindex="0" class="dropdown-content menu p-2 shadow-lg bg-base-100 rounded-lg w-48 border border-base-200">
            <% @order_statuses.each do |status| %>
              <li>
                <button type="submit" name="order_status_id" class="text-sm" value="<%= status.id %>">
                  <%= status.full_name %>
                </button>
              </li>
            <% end %>
          </ul>
        </div>
        <button class="btn btn-ghost btn-sm border border-base-200 gap-2 text-error hover:bg-error/10" type="button" onclick="delete_orders.showModal()">
          <i class="fas fa-trash text-sm"></i>
          Usuń
        </button>
        <!-- Przycisk filtrów po prawej -->
        <button type="button" onclick="toggleFilters()" class="btn btn-ghost btn-sm flex gap-2 ml-auto">
          <i class="fas fa-filter text-xs"></i>
          <span id="filter-text">Filtry</span>
          <i class="fas fa-chevron-down text-xs transition-transform duration-200" id="filter-icon"></i>
        </button>
      </div>
      <%= hidden_field_tag "order_ids", "[]", data: { checkbox_selection_target: "selectionInput" } %>
      <!-- Delete Modal -->
      <dialog id="delete_orders" class="modal">
        <div class="modal-box">
          <div class="flex flex-col gap-4">
            <h3 class="text-lg font-medium text-base-content">Usuń zaznaczone zamówienia</h3>
            <p class="text-base-content/70 text-sm">
              Uwaga! Usunięcie zrealizowanych zamówień spowoduje przywrócenie na stan sztuk magazynowych dla produktów z katalogu.
            </p>
          </div>
          <div class="modal-action">
            <button class="btn btn-ghost btn-sm" type="button" onclick="delete_orders.close()">Anuluj</button>
            <button class="btn btn-error btn-sm" type="submit" name="delete" value="1">Usuń</button>
          </div>
        </div>
      </dialog>
    <% end %>
    <!-- SEPARATOR -->
    <div class="border-t border-base-200"></div>
    <!-- BLOK 2: Filters - ZWYKŁY HTML -->
    <%= render FiltersComponent.new(
      query: @q, 
      url: orders_path, 
      turbo_frame: "orders_frame", 
      id: "filters-form",
      preserve_params: { status: params[:status] }
    ) do %>
      <%= filter_text :addresses_fullname_cont, "Nazwa klienta", @q %>
      <%= filter_number :id_eq, "Numer zamówienia", @q, placeholder: "123" %>
      <%= filter_date :created_at_gteq, "Data od", @q %>
      <%= filter_date :created_at_lteq, "Data do", @q %>
      <%= filter_text :payment_method_cont, "Metoda płatności", @q %>
      <%= filter_number :total_amount_gteq, "Kwota od", @q, placeholder: "0.00", step: 0.01 %>
      <%= filter_number :total_amount_lteq, "Kwota do", @q, placeholder: "0.00", step: 0.01 %>
      <%= filter_number :shipping_cost_gteq, "Koszt dostawy od", @q, placeholder: "0.00", step: 0.01 %>
      <%= filter_select :amount_paid_eq, "Status płatności", @q, options: [["Nieopłacone", "0"], ["Częściowo opłacone", "partial"], ["Opłacone", "full"]] %>
      <%= filter_text :addresses_city_cont, "Miasto", @q %>
      <%= filter_text :order_products_name_cont, "Nazwa produktu", @q %>
    <% end %>
  </div>
  <%= turbo_frame_tag "orders_frame" do %>
    <!-- Pagination Section -->
    <div class="flex justify-between items-center mt-4 mb-2">
      <div class="text-sm text-base-content/70">
        <div class="dropdown dropdown-down inline-block">
          <button tabindex="0" class="btn btn-ghost btn-xs gap-1">
            <%= @per_page %>
            <i class="fas fa-chevron-down text-xs"></i>
          </button>
          <ul tabindex="0" class="dropdown-content menu p-2 shadow-lg bg-base-100 rounded-lg w-16 border border-base-200">
            <% [20, 30, 50, 75, 100].each do |per_page| %>
              <li>
                <%= link_to per_page, 
                    orders_path(page: 1, per_page: per_page, q: @search_params, status: params[:status]), 
                    class: @per_page == per_page ? 'active' : '',
                    data: { turbo_frame: "orders_frame" } %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="flex items-center gap-4">
        <div>
          <span class="font-medium"><%= @orders.offset_value + 1 %></span>-<span class="font-medium"><%= @orders.offset_value + @orders.length %></span> z 
          <span class="font-normal"><%= @orders.total_count %></span> pozycji
        </div>
        <div class="flex items-center">
          <%= link_to orders_path(page: @orders.prev_page, per_page: @per_page, q: @search_params, status: params[:status]), 
            class: "btn btn-ghost btn-sm #{@orders.prev_page ? 'hover:bg-base-200' : 'opacity-50 cursor-not-allowed'}", 
            data: { turbo_frame: "orders_frame" },
            onclick: @orders.prev_page ? nil : "return false" do %>
            <i class="fas fa-chevron-left text-sm"></i>
          <% end %>
          <%= link_to orders_path(page: @orders.next_page, per_page: @per_page, q: @search_params, status: params[:status]), 
            class: "btn btn-ghost btn-sm #{@orders.next_page ? 'hover:bg-base-200' : 'opacity-50 cursor-not-allowed'}", 
            data: { turbo_frame: "orders_frame" },
            onclick: @orders.next_page ? nil : "return false" do %>
            <i class="fas fa-chevron-right text-sm"></i>
          <% end %>
        </div>
      </div>
    </div>
    <!-- Table Section -->
    <div class="bg-base-200 rounded-lg border border-base-200 overflow-y-visible shadow-sm">
      <table class="table w-full">
        <thead class="bg-base-100">
          <tr>
            <th class="text-base-content font-semibold">Numer</th>
            <th class="text-base-content font-semibold">Klient</th>
            <th class="text-base-content font-semibold">Przedmioty</th>
            <th class="text-base-content font-semibold">Kwota</th>
            <th class="text-base-content font-semibold">Status</th>
            <th class="text-base-content font-semibold">Data</th>
          </tr>
        </thead>
        <tbody>
          <% if @orders.present? %>
            <% @orders.each do |order| %>
              <%= render partial: "orders/row", locals: { order: order } %>
            <% end %>
          <% else %>
            <tr>
              <td colspan="6" class="text-center py-16">
                <div class="max-w-sm mx-auto">
                  <div class="w-20 h-20 bg-gradient-to-br from-primary/10 to-secondary/10 rounded-2xl flex items-center justify-center mx-auto mb-6">
                    <i class="fas fa-shopping-cart text-3xl text-primary"></i>
                  </div>
                  <h3 class="text-xl font-semibold text-base-content mb-3">Brak zamówień</h3>
                  <p class="text-base-content/60 mb-6">
                    Nie znaleziono zamówień do wyświetlenia.
                  </p>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>