<div id="<%= dom_id order %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">User:</strong>
    <%= order.user_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Source:</strong>
    <%= order.source %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Status:</strong>
    <%= order.order_status&.full_name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Order date:</strong>
    <%= order.created_at %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Total amount:</strong>
    <%= order.total_amount %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Currency:</strong>
    <%= order.currency %>
  </div>
</div>
