<% content_for :title, "Showing order" %>
<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="flex flex-col gap-4">
    <%= render(Order::TopComponent.new(order_id: @order.id)) %>
    <%= render(Order::InfoComponent.new(order: @order)) %>
  </div>
  <div class="flex gap-2">
    <%= link_to "Edit this order", edit_order_path(@order), class: "btn" %>
    <%= link_to "Back to orders", orders_path, class: "btn" %>
    <%= button_to "Destroy this order", @order, method: :delete, class: "btn btn-error" , data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>
