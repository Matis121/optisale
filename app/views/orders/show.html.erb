<% content_for :title, "Showing order" %>
<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>
  <h1 class="font-bold text-4xl">Showing order</h1>
  <%= render @order %>
  <div class="flex gap-2">
    <%= link_to "Edit this order", edit_order_path(@order), class: "btn" %>
    <%= link_to "Back to orders", orders_path, class: "btn" %>
    <%= button_to "Destroy this order", @order, method: :delete, class: "btn btn-error" , data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>
