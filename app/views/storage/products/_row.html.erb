<tr class="hover:bg-base-300/50 transition-colors duration-200">
  <td>
    <div class="flex items-center gap-3">
      <div class="w-8 h-8 bg-primary/10 rounded-lg flex items-center justify-center">
        <i class="fas fa-box text-primary text-sm"></i>
      </div>
      <div>
        <div class="font-semibold text-base-content">
          <%= link_to product.name, edit_storage_product_path(product), data: { turbo_frame: "modal-frame" }, class: "hover:text-primary transition-colors" %>
        </div>
        <div class="text-xs text-base-content/60">ID <%= product.id %> | SKU <%= product.sku %> | EAN <%= product.ean %></div>
      </div>
    </div>
  </td>
  <td class="text-center">
    <div class="font-medium text-base-content">
      <%= product.product_prices.find { |pp| pp.price_group_id == @current_price_group.id }&.gross_price || "0.00" %> PLN
    </div>
  </td>
  <td class="text-center">
    <% stock_quantity = @current_warehouse.present? ? 
                        (product.product_stocks.find { |ps| ps.warehouse_id == @current_warehouse.id }&.quantity || 0) :
                        (product.product_stocks.sum(&:quantity) || 0) %>
    <span class="font-mono"><%= stock_quantity %> szt.</span>
  </td>
  <td>
    <div class="text-sm text-base-content"><%= product.created_at.strftime('%d.%m.%Y %H:%M') %></div>
    <div class="text-xs text-base-content/60">Zmodyfikowano: <%= product.updated_at.strftime('%d.%m.%Y %H:%M') %></div>
  </td>
  <td class="text-right">
    <div class="flex items-center justify-end gap-2">
      <div class="dropdown dropdown-end">
        <div tabindex="0" role="button" class="btn btn-ghost btn-xs">
          <i class="fas fa-ellipsis-v text-base-content/60"></i>
        </div>
        <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow-xl bg-base-100 rounded-box w-48 border border-base-200">
          <li>
            <%= link_to edit_storage_product_path(product), data: { turbo_frame: "modal-frame" }, class: "gap-2" do %>
              <i class="fas fa-edit text-base-content"></i> Edytuj
            <% end %>
          </li>
          <li>
            <%= link_to storage_product_stock_movements_path(product), data: { turbo_frame: "modal-frame" }, class: "gap-2" do %>
              <i class="fas fa-history text-base-content"></i> Historia stanów
            <% end %>
          </li>
          <li>
            <%= link_to storage_product_path(product), 
                data: { turbo_method: :delete, turbo_confirm: "Czy na pewno chcesz usunąć ten produkt?" },
                class: "text-error gap-2" do %>
              <i class="fas fa-trash text-error"></i> Usuń
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </td>
</tr>