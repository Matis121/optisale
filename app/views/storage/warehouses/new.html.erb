<% content_for :title, "Nowy magazyn" %>
<div class="w-full max-w-2xl mx-auto">
  <div class="flex items-center mb-6">
    <%= link_to storage_warehouses_path, class: "btn btn-ghost btn-sm mr-4" do %>
      <i class="fas fa-arrow-left"></i>
    <% end %>
    <h1 class="font-bold text-2xl">Nowy magazyn</h1>
  </div>
  <div class="bg-base-100 rounded-lg shadow-sm border p-6">
    <%= form_with model: [:storage, @warehouse], local: true do |form| %>
      <% if @warehouse.errors.any? %>
        <div class="alert alert-error mb-6">
          <i class="fas fa-exclamation-triangle"></i>
          <div>
            <h3 class="font-bold">Błąd podczas zapisywania:</h3>
            <ul class="list-disc list-inside">
              <% @warehouse.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
      <div class="form-control w-full mb-4">
        <%= form.label :name, "Nazwa magazynu", class: "label" %>
        <%= form.text_field :name, class: "input input-bordered w-full", placeholder: "np. Magazyn główny" %>
      </div>
      <div class="form-control w-full mb-4">
        <%= form.label :catalog_id, "Katalog", class: "label" %>
        <%= form.select :catalog_id, 
            options_from_collection_for_select(@catalogs, :id, :name), 
            { prompt: "Wybierz katalog" }, 
            { class: "select select-bordered w-full" } %>
      </div>
      <div class="form-control mb-6">
        <label class="label cursor-pointer">
          <span class="label-text">Magazyn domyślny</span>
          <%= form.check_box :default, class: "checkbox" %>
        </label>
      </div>
      <div class="flex gap-3">
        <%= form.submit "Utwórz magazyn", class: "btn btn-primary" %>
        <%= link_to "Anuluj", storage_warehouses_path, class: "btn btn-ghost" %>
      </div>
    <% end %>
  </div>
</div>
