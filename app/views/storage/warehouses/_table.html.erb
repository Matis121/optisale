<%= render Ui::Layout::Table::DefaultComponent.new do |component| %>
  <% component.with_header(title: "Magazyny", href: new_storage_warehouse_path, text_button: "Dodaj magazyn") %>
  <% component.with_table_header do %>
    <thead>
      <tr>
        <th class="text-base-content font-semibold">Nazwa magazynu</th>
        <th class="text-base-content font-semibold">Katalog</th>
        <th class="text-base-content font-semibold text-center">Domy≈õlny</th>
        <th class="text-base-content font-semibold">Integracje</th>
        <th class="text-base-content font-semibold text-right">Akcje</th>
      </tr>
    </thead>
  <%end %>
  <% component.with_table_body do %>
    <tbody>
      <% @warehouses.each do |warehouse| %>
        <%= render "row", warehouse: warehouse %>
      <% end %>
    </tbody>
  <% end %>
<% end %>