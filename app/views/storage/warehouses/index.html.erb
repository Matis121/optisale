<% content_for :title, "Magazyny" %>
<%= render Ui::Layout::Container::DefaultComponent.new do %>
  <%= render Ui::Storage::Settings::TabsComponent.new %>
  <!-- Content -->
  <div class="bg-base-100 rounded-lg shadow-sm">
    <div class="p-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-semibold">Magazyny</h2>
        <div class="text-sm text-base-content/60">
          <%= link_to new_storage_warehouse_path, class: "btn btn-sm btn-primary" do %>
            <i class="fas fa-plus mr-1"></i> Nowy magazyn
          <% end %>
        </div>
      </div>
      <% if @warehouses.any? %>
        <div class="overflow-x-auto">
          <table class="table table-zebra w-full">
            <thead>
              <tr>
                <th>Nazwa</th>
                <th>Katalog</th>
                <th>Domyślny</th>
                <th>Integracje</th>
                <th class="text-right">Akcje</th>
              </tr>
            </thead>
            <tbody>
              <% @warehouses.each do |warehouse| %>
                <tr>
                  <td>
                    <div class="font-medium"><%= warehouse.name %></div>
                  </td>
                  <td>
                    <span class="badge badge-outline"><%= warehouse.catalog.name %></span>
                  </td>
                  <td>
                    <% if warehouse.default? %>
                      <span class="badge badge-success">Tak</span>
                    <% else %>
                      <span class="badge badge-ghost">Nie</span>
                    <% end %>
                  </td>
                  <td>
                    <div class="flex gap-1">
                      <span class="badge badge-info badge-sm">Allegro</span>
                      <span class="badge badge-warning badge-sm">Empik</span>
                    </div>
                  </td>
                  <td class="text-right">
                    <div class="dropdown dropdown-end">
                      <div tabindex="0" role="button" class="btn btn-ghost btn-sm">
                        <i class="fas fa-ellipsis-v"></i>
                      </div>
                      <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52">
                        <li>
                          <%= link_to edit_storage_warehouse_path(warehouse) do %>
                            <i class="fas fa-edit"></i> Edytuj
                          <% end %>
                        </li>
                        <li>
                          <%= link_to storage_warehouse_path(warehouse), 
                              method: :delete,
                              data: { 
                                confirm: "Czy na pewno chcesz usunąć magazyn '#{warehouse.name}'?",
                                turbo_method: :delete
                              },
                              class: "text-error" do %>
                            <i class="fas fa-trash"></i> Usuń
                          <% end %>
                        </li>
                      </ul>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-12">
          <div class="text-6xl text-base-content/20 mb-4">
            <i class="fas fa-warehouse"></i>
          </div>
          <h3 class="text-lg font-medium mb-2">Brak magazynów</h3>
          <p class="text-base-content/60 mb-4">Utwórz swój pierwszy magazyn, aby rozpocząć zarządzanie produktami.</p>
          <%= link_to new_storage_warehouse_path, class: "btn btn-primary" do %>
            <i class="fas fa-plus mr-2"></i> Utwórz magazyn
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
