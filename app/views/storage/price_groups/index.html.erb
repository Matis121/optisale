<% content_for :title, "Grupy cenowe" %>
<%= render Ui::Layout::Container::DefaultComponent.new do %>
  <%= render Ui::Storage::Settings::TabsComponent.new %>
  <!-- Content -->
  <div class="bg-base-100 rounded-lg shadow-sm">
    <div class="p-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-semibold">Grupy cenowe</h2>
        <div class="text-sm text-base-content/60">
        </div>
      </div>
      <% if @price_groups.any? %>
        <div class="overflow-x-auto">
          <table class="table table-zebra w-full">
            <thead>
              <tr>
                <th>Nazwa</th>
                <th>Katalog</th>
                <th>Produkty</th>
                <th>Integracje</th>
                <th class="text-right">Akcje</th>
              </tr>
            </thead>
            <tbody>
              <% @price_groups.each do |price_group| %>
                <tr>
                  <td>
                    <div class="font-medium"><%= price_group.name %></div>
                  </td>
                  <td>
                    <span class="badge badge-outline"><%= price_group.catalog.name %></span>
                  </td>
                  <td>
                    <span class="badge badge-outline"><%= price_group.product_prices.count %></span>
                  </td>
                  <td>
                    <div class="flex gap-1">
                      <span class="badge badge-info badge-sm">Allegro</span>
                      <span class="badge badge-warning badge-sm">Empik</span>
                    </div>
                  </td>
                  <td class="text-right">
                    <div class="dropdown dropdown-end">
                      <div tabindex="0" role="button" class="btn btn-ghost btn-sm">
                        <i class="fas fa-ellipsis-v"></i>
                      </div>
                      <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52">
                        <li>
                          <%= link_to edit_storage_price_group_path(price_group) do %>
                            <i class="fas fa-edit"></i> Edytuj
                          <% end %>
                        </li>
                        <li>
                          <%= link_to storage_price_group_path(price_group), 
                              method: :delete,
                              data: { 
                                confirm: "Czy na pewno chcesz usunąć grupę cenową '#{price_group.name}'?",
                                turbo_method: :delete
                              },
                              class: "text-error" do %>
                            <i class="fas fa-trash"></i> Usuń
                          <% end %>
                        </li>
                      </ul>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-12">
          <div class="text-6xl text-base-content/20 mb-4">
            <i class="fas fa-tags"></i>
          </div>
          <h3 class="text-lg font-medium mb-2">Brak grup cenowych</h3>
          <p class="text-base-content/60 mb-4">Utwórz swoją pierwszą grupę cenową, aby zarządzać cenami produktów.</p>
          <%= link_to new_storage_price_group_path, class: "btn btn-primary" do %>
            <i class="fas fa-plus mr-2"></i> Utwórz grupę cenową
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>