<%# Table Section %>
<div class="overflow-x-auto">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Nazwa
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Nazwa krótka
        </th>
        <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
          Akcje
        </th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% if @order_statuses.present? %>
        <% @order_statuses.each do |status| %>
          <%= render partial: "order_statuses/row", locals: { status: status } %>
        <% end %>
      <% else %>
        <tr>
          <td colspan="3" class="px-6 py-8 text-center text-gray-500">
            <div class="flex flex-col items-center justify-center">
              <%= lucide_icon("file-question", class: "w-12 h-12 text-gray-400 mb-3") %>
              <p class="text-sm">Brak statusów do wyświetlenia</p>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>