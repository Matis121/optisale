<!-- Table Section -->
<div class="bg-base-200 rounded-lg border border-base-200 overflow-y-visible shadow-sm">
  <table class="table w-full">
    <thead class="bg-base-100">
      <tr>
        <th class="text-base-content font-semibold w-10"></th>
        <th class="text-base-content font-semibold">Nazwa statusu</th>
        <th class="text-base-content font-semibold">Nazwa krótka</th>
        <th class="text-base-content font-semibold text-right">Akcje</th>
      </tr>
    </thead>
    <tbody data-controller="sortable" data-sortable-resource-name-value="order_status" data-sortable-handle-value=".handle">
      <% if @order_statuses.present? %>
        <% @order_statuses.each do |status| %>
          <%= render partial: "order_statuses/row", locals: { status: status } %>
        <% end %>
      <% else %>
        <tr>
          <td colspan="4" class="text-center py-16">
            <div class="max-w-sm mx-auto">
              <div class="w-20 h-20 bg-gradient-to-br from-secondary/10 to-accent/10 rounded-2xl flex items-center justify-center mx-auto mb-6">
                <i class="fas fa-file-question text-3xl text-secondary"></i>
              </div>
              <h3 class="text-xl font-semibold text-base-content mb-3">Brak statusów</h3>
              <p class="text-base-content/60 mb-6">
                Utwórz swój pierwszy status zamówienia.
              </p>
              <%= link_to new_order_status_path, class: "btn btn-primary gap-2", data: { turbo_frame: "modal-frame" } do %>
                <i class="fas fa-plus"></i>
                Utwórz status
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>