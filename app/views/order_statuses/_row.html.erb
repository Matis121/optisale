<tr class="hover:bg-base-300/50 transition-colors duration-200" data-sortable-update-url="<%= order_status_path(status) %>">
  <td class="handle cursor-move">
    <div class="flex items-center justify-center w-8 h-8 text-base-content/40 hover:text-base-content/70 transition-colors">
      <i class="fas fa-grip-vertical"></i>
    </div>
  </td>
  <td>
    <div class="flex items-center gap-3">
      <div>
        <% if status.default? %>
          <div class="w-6 h-6 flex items-center justify-center text-primary tooltip tooltip-top" data-tip="Domyślny status - nie jest możliwy do usunięcia.">
            <i class="fas fa-star text-xs text-yellow-500"></i>
          </div>
        <% end %>
      </div>
      <div class="w-6 h-6 rounded-lg flex items-center justify-center" style="background-color: <%= status.color %>">
      </div>
      <div>
        <div class="font-semibold text-base-content"><%= status.full_name %></div>
      </div>
    </div>
  </td>
  <td>
    <span class="badge badge-outline badge-sm"><%= status.short_name %></span>
  </td>
  <td>
    <% if status.order_status_group.present? %>
      <span class="badge badge-sm">
        <%= status.order_status_group.name %>
      </span>
    <% end %>
  </td>
  <td class="text-right">
    <div class="flex items-center justify-end gap-2">
      <div class="dropdown dropdown-end">
        <div tabindex="0" role="button" class="btn btn-ghost btn-xs">
          <i class="fas fa-ellipsis-v text-base-content/60"></i>
        </div>
        <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow-xl bg-base-100 rounded-box w-32 border border-base-200 overflow-hidden">
          <li>
            <%= link_to edit_order_status_path(status), 
                class: "gap-2",
                data: { turbo_frame: "modal-frame" } do %>
              <i class="fas fa-edit text-base-content"></i> Edytuj
            <% end %>
          </li>
          <% unless status.default? %>
            <li>
              <%= link_to order_status_path(status), 
                  data: { turbo_method: :delete, turbo_confirm: "Czy na pewno chcesz usunąć ten status?" },
                  class: "text-error gap-2" do %>
                <i class="fas fa-trash"></i> Usuń
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </td>
</tr>
