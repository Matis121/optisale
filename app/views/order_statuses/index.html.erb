<% content_for :title, "Statusy zamówień" %>
<%= render Ui::Layout::Container::DefaultComponent.new do %>
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-4">
    <div>
      <h1 class="text-2xl font-bold text-base-content">Statusy zamówień</h1>
      <p class="text-base-content/60 mt-1">Zarządzaj statusami zamówień w systemie</p>
    </div>
    <%= link_to new_order_status_path, class: "btn btn-primary btn-sm gap-2", data: { turbo_frame: "modal-frame" } do %>
      <i class="fas fa-plus text-xs"></i>
      Nowy status
    <% end %>
  </div>
  <!-- Content -->
  <div class="bg-base-100 rounded-lg border border-base-300 shadow-sm">
    <%= render "table" %>
  </div>
<% end %>
