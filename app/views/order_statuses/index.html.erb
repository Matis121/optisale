<% content_for :title, "Order statuses" %>
<div class="w-full">
  <div class="flex justify-between items-center mb-8">
    <h1 class="font-bold text-4xl">Order statuses</h1>
    <%= link_to "New order status", new_order_status_path, class: "btn btn-primary" %>
  </div>
  <div id="order_statuses" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @order_statuses.any? %>
      <%= render partial: "order_statuses/table", locals: {order_statuses: @order_statuses} %>
    <% else %>
      <p class="text-center my-10">No order statuses found.</p>
    <% end %>
  </div>
</div>
