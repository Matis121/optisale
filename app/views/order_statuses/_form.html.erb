<%= form_with(model: @order_status, data: { turbo_frame: "_top" }, id: "order-status-form") do |form| %>
  <% if @order_status.errors.any? %>
    <div class="alert alert-error mb-6">
      <i class="fas fa-exclamation-triangle"></i>
      <div>
        <h3 class="font-bold">Błąd podczas zapisywania:</h3>
        <ul class="list-disc list-inside">
          <% @order_status.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="space-y-8">
    <div class="form-control w-full">
      <%= form.label :full_name, "Pełna nazwa", class: "label" %>
      <%= form.text_field :full_name, class: "input input-bordered w-full focus:input-primary", placeholder: "np. Oczekujące na płatność" %>
    </div>
    <div class="form-control w-full">
      <%= form.label :short_name, "Skrócona nazwa", class: "label" %>
      <%= form.text_field :short_name, class: "input input-bordered w-full focus:input-primary", placeholder: "np. Oczekujące" %>
    </div>
    <div class="form-control w-full">
      <%= form.label :color, "Kolor", class: "label" %>
      <div data-controller="color-picker" data-color-picker-theme-value="nano" class="flex items-center gap-3">
        <div data-color-picker-target="button"></div>
        <%= form.text_field :color, value: @order_status.color || "#667EEA", data: { color_picker_target: "input" }, class: "input input-bordered flex-1" %>
      </div>
      <div class="label">
        <span class="label-text-alt text-base-content/40 text-xs">Wybierz kolor lub wpisz wartość hex</span>
      </div>
    </div>
    <div class="form-control w-full">
      <%= form.label :order_status_group_id, "Grupa", class: "label" %>
      <%= form.collection_select :order_status_group_id, @groups, :id, :name, { prompt: "Brak grupy" }, { class: "select select-bordered w-full focus:select-primary" } %>
    </div>
  </div>
  <div class="flex gap-3 justify-end mt-10 pt-6 border-t border-base-300">
    <% if @order_status.new_record? %>
      <%= form.submit "Utwórz status", class: "btn btn-primary" %>
    <% else %>
      <%= form.submit "Zapisz zmiany", class: "btn btn-primary" %>
    <% end %>
    <button type="button" class="btn btn-ghost" onclick="modal.close()">Zamknij</button>
  </div>
  <% unless @order_status.new_record? %>
    <div class="mt-4 text-start">
      <span class="text-sm text-base-content/60">ID: <%= @order_status.id %></span>
      <span class="text-sm text-base-content/60">Pozycja: <%= @order_status.position %></span>
    </div>
  <% end %>
<% end %>
