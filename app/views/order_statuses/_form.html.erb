<%= form_with(model: @order_status, class: "contents", data: { turbo_frame: "_top"}, id: "order-status-form") do |form| %>
  <% if @order_status.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(@order_status.errors.count, "error") %> prohibited this order_status from being saved:</h2>
      <ul class="list-disc ml-6">
        <% @order_status.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5 flex flex-col">
    <%= form.label :full_name, "Pełna nazwa" %>
    <%= form.text_field :full_name, class: "input" %>
  </div>
  <div class="my-5 flex flex-col">
    <%= form.label :short_name, "Skrócona nazwa" %>
    <%= form.text_field :short_name, class: "input" %>
  </div>
  <!-- Form Actions -->
  <div class="flex flex-col sm:flex-row gap-3 justify-end pt-4">
    <button type="button" class="btn btn-ghost" onclick="modal.close()">Zamknij</button>
    <% if @order_status.new_record? %>
      <%= form.submit "Utwórz", class: "btn btn-primary" %>
    <% else %>
      <%= form.submit "Zapisz", class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>
