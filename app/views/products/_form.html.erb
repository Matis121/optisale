<%= form_with(model: product, class: "contents") do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul class="list-disc ml-6">
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": product.errors[:name].none?, "border-red-400 focus:outline-red-600": product.errors[:name].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :sku %>
    <%= form.text_field :sku, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": product.errors[:sku].none?, "border-red-400 focus:outline-red-600": product.errors[:sku].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :ean %>
    <%= form.text_field :ean, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": product.errors[:ean].none?, "border-red-400 focus:outline-red-600": product.errors[:ean].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :tax_rate %>
    <%= form.text_field :tax_rate, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": product.errors[:tax_rate].none?, "border-red-400 focus:outline-red-600": product.errors[:tax_rate].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :nett_price %>
    <%= form.text_field :nett_price, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": product.errors[:nett_price].none?, "border-red-400 focus:outline-red-600": product.errors[:nett_price].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :gross_price %>
    <%= form.text_field :gross_price, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": product.errors[:gross_price].none?, "border-red-400 focus:outline-red-600": product.errors[:gross_price].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :quantity %>
    <%= form.text_field :quantity, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": product.errors[:gross_price].none?, "border-red-400 focus:outline-red-600": product.errors[:gross_price].any?}] %>
  </div>
  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
