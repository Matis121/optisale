<% content_for :title, "Products" %>
<div class="w-full">
  <div class="flex justify-between items-center mb-4">
    <h1 class="font-bold text-xl pt-4 px-4">Produkty</h1>
    <%= link_to "New product", new_product_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>
  <div id="products" class="min-w-full divide-y divide-gray-200">
    <%= turbo_frame_tag "products_frame" do %>
      <%= render partial: "products/table", locals: { products: @products } %>
    <% end %>
  </div>
</div>
