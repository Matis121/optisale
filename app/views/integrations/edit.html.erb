<div class="container mx-auto py-8 max-w-6xl">
  <!-- Header with breadcrumb and title -->
  <div class="mb-8">
    <div class="flex items-center gap-2 text-sm breadcrumbs mb-4">
      <ul>
        <li><%= link_to "Integracje", integrations_path, class: "text-base-content/60 hover:text-base-content" %></li>
        <li><%= link_to @integration.name, integration_path(@integration), class: "text-base-content/60 hover:text-base-content" %></li>
        <li class="text-base-content">Edycja</li>
      </ul>
    </div>
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <h1 class="text-3xl font-bold text-base-content">Edytuj integrację</h1>
        <p class="text-base-content/60 mt-2">
          <%= @integration.name %> (<%= @integration.provider.humanize %>)
        </p>
      </div>
    </div>
  </div>
  <!-- Main form layout -->
  <div class="grid lg:grid-cols-3 gap-8">
    <!-- Main form -->
    <div class="lg:col-span-2">
      <div class="card bg-base-100 shadow-sm border border-base-200">
        <div class="card-body">
          <%= form_with(model: @integration, url: integration_path(@integration), method: :patch, local: true, class: "space-y-8") do |form| %>
            <!-- Integration name -->
            <div class="form-control">
              <%= form.label :name, "Nazwa integracji", class: "label label-text font-semibold" %>
              <%= form.text_field :name, 
                                  class: "input input-bordered w-full #{'input-error' if @integration.errors[:name].any?}", 
                                  placeholder: "np. Moja Fakturownia" %>
              <% if @integration.errors[:name].any? %>
                <div class="label">
                  <span class="label-text-alt text-error">
                    <%= @integration.errors[:name].first %>
                  </span>
                </div>
              <% end %>
            </div>
            <!-- Provider-specific credentials -->
            <div class="divider">
              <span class="text-base-content/60 font-semibold">Dane uwierzytelniające</span>
            </div>
            <% case @integration.provider %>
            <% when 'fakturownia' %>
              <!-- Fakturownia credentials -->
              <div class="space-y-6">
                <div class="form-control">
                  <%= label_tag "invoicing_integration[credentials][account]", "Subdomena konta", class: "label label-text font-semibold" %>
                  <%= text_field_tag "invoicing_integration[credentials][account]", 
                                     @integration.credentials['account'], 
                                     class: "input input-bordered w-full", 
                                     placeholder: "twojafirma" %>
                  <div class="label">
                    <span class="label-text-alt text-base-content/60">
                      Z adresu: https://twojafirma.fakturownia.pl
                    </span>
                  </div>
                </div>
                <div class="form-control">
                  <%= label_tag "invoicing_integration[credentials][api_token]", "Token API", class: "label label-text font-semibold" %>
                  <%= password_field_tag "invoicing_integration[credentials][api_token]", 
                                         "", 
                                         class: "input input-bordered w-full", 
                                         placeholder: "Pozostaw puste aby nie zmieniać" %>
                  <div class="label">
                    <span class="label-text-alt text-base-content/60">
                      <% if @integration.credentials['api_token'].present? %>
                        Token jest ustawiony. Pozostaw puste aby nie zmieniać.
                      <% else %>
                        Wprowadź token API z Fakturowni
                      <% end %>
                    </span>
                  </div>
                </div>
              </div>
            <% end %>
            <!-- Validation errors -->
            <% if @integration.errors[:credentials].any? %>
              <div class="alert alert-error">
                <i class="fas fa-exclamation-triangle"></i>
                <span><%= @integration.errors[:credentials].first %></span>
              </div>
            <% end %>
            <!-- Action buttons -->
            <div class="flex justify-end gap-3 pt-6 border-t border-base-200">
              <%= link_to "Anuluj", integration_path(@integration), class: "btn btn-ghost" %>
              <%= form.submit "Zapisz zmiany", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <!-- Sidebar with status and info -->
    <div class="lg:col-span-1">
      <div class="space-y-6">
        <!-- Integration status -->
        <% if @integration.persisted? %>
          <div class="card bg-base-100 shadow-sm border border-base-200">
            <div class="card-body">
              <h3 class="card-title text-lg">Status integracji</h3>
              <div class="space-y-4">
                <div>
                  <p class="text-sm text-base-content/60 mb-2">Status aktywności</p>
                  <div class="flex items-center gap-2">
                    <% if @integration.active? %>
                      <span class="badge badge-success">
                        <i class="fas fa-check-circle mr-1"></i>
                        Aktywna
                      </span>
                    <% else %>
                      <span class="badge badge-ghost">
                        <i class="fas fa-pause-circle mr-1"></i>
                        Nieaktywna
                      </span>
                    <% end %>
                  </div>
                </div>
                <div>
                  <p class="text-sm text-base-content/60 mb-2">Status połączenia</p>
                  <div class="flex items-center gap-2">
                    <% case @integration.status %>
                    <% when 'active' %>
                      <span class="badge badge-info">
                        <i class="fas fa-wifi mr-1"></i>
                        Połączona
                      </span>
                    <% when 'error' %>
                      <span class="badge badge-error">
                        <i class="fas fa-exclamation-triangle mr-1"></i>
                        Błąd
                      </span>
                    <% else %>
                      <span class="badge badge-warning">
                        <i class="fas fa-clock mr-1"></i>
                        Nieprzetestowana
                      </span>
                    <% end %>
                  </div>
                </div>
              </div>
              <% if @integration.error_message.present? %>
                <div class="alert alert-warning mt-4">
                  <i class="fas fa-exclamation-triangle"></i>
                  <div>
                    <p class="font-semibold">Ostatni błąd:</p>
                    <p class="text-sm"><%= @integration.error_message %></p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
        <!-- Current settings info -->
        <% if @integration.credentials['account'].present? %>
          <div class="card bg-base-100 shadow-sm border border-base-200">
            <div class="card-body">
              <h3 class="card-title text-lg">Obecne ustawienia</h3>
              <div class="space-y-3">
                <div>
                  <p class="text-sm text-base-content/60">Konto</p>
                  <p class="font-mono text-sm"><%= @integration.credentials['account'] %>.fakturownia.pl</p>
                </div>
                <div>
                  <p class="text-sm text-base-content/60">Token API</p>
                  <p class="text-sm">
                    <% if @integration.credentials['api_token'].present? %>
                      <span class="badge badge-success badge-sm">Ustawiony</span>
                    <% else %>
                      <span class="badge badge-ghost badge-sm">Brak</span>
                    <% end %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <!-- Help section -->
        <div class="card bg-base-200/50 border border-base-300">
          <div class="card-body">
            <h3 class="card-title text-lg">
              <i class="fas fa-info-circle text-info"></i>
              Pomoc
            </h3>
            <div class="text-sm space-y-2">
              <p>Po zmianie danych uwierzytelniających konieczne jest ponowne przetestowanie połączenia.</p>
              <p>Token API znajdziesz w ustawieniach swojego konta Fakturownia.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
