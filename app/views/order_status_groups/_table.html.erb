  <%= render Ui::Layout::Table::DefaultComponent.new do |component| %>
  <% component.with_header(title: "Grupy statusów", href: new_order_status_group_path, text_button: "Dodaj grupę") %>
  <% component.with_table_header do %>
    <thead>
      <tr>
        <th class="text-base-content font-semibold w-10">
          <button class="btn btn-ghost btn-xs p-1" onclick="toggleTableBody()">
            <i class="fas fa-chevron-down transition-transform" id="toggle-icon"></i>
          </button>
        </th>
        <th class="text-base-content font-semibold">Nazwa grupy</th>
        <th class="text-base-content font-semibold text-right">Akcje</th>
      </tr>
    </thead>
  <%end %>
  <% component.with_table_body do %>
    <tbody id="groups-table-body" data-controller="sortable" data-sortable-resource-name-value="order_status_group" data-sortable-handle-value=".handle">
      <% groups = defined?(@order_status_groups) ? @order_status_groups : current_account.order_status_groups.order(:position) %>
      <% if groups.present? %>
        <% groups.each do |group| %>
          <%= render partial: "order_status_groups/row", locals: { group: group } %>
        <% end %>
      <% else %>
        <%= render Ui::Layout::Table::EmptyStateComponent.new(icon: "fa-layer-group", title: "Brak grup", paragraph: "Utwórz swoją pierwszą grupę statusów.", href: "order_status_groups/new", text_button: "Utwórz grupę" ) %>
      <% end %>
    </tbody>
  <% end %>
<% end %>