<tr class="hover:bg-base-300/50 transition-colors duration-200">
  <td>
    <div class="flex items-center gap-3">
      <div class="w-8 h-8 bg-primary/10 rounded-lg flex items-center justify-center">
        <i class="fas fa-file-invoice text-primary text-sm"></i>
      </div>
      <div>
        <div class="font-semibold text-base-content"><%= link_to invoice.invoice_number, invoice_path(invoice), data: { turbo_frame: "_top" } %></div>
      </div>
    </div>
  </td>
  <td>
    <%= link_to invoice.order, class: "link link-primary font-medium", data: { turbo_frame: "_top" } do %>
      #<%= invoice.order.id %>
    <% end %>
  </td>
  <td>
    <span class="text-base-content">
      <%= invoice.invoice_company.presence || invoice.invoice_fullname %>
    </span>
  </td>
  <td>
    <span class="font-semibold text-base-content">
      <%= number_to_currency(invoice.total_price_brutto, unit: "#{invoice.currency} ", separator: ",", delimiter: " ") %>
    </span>
  </td>
  <td>
    <span class="text-base-content"><%= invoice.date_sell&.strftime("%d.%m.%Y") %></span>
  </td>
  <td>
    <div class="flex items-center justify-end gap-3">
      <%= link_to invoice_path(invoice), class: "btn btn-sm btn-outline", data: { turbo_frame: "_top" } do %>
        <i class="fas fa-edit"></i>
      <% end %>
      <%= button_to invoice_path(invoice), method: :delete, class: "btn btn-sm btn-outline btn-error", data: { turbo_confirm: "Czy na pewno chcesz usunąć tę fakturę?", turbo_frame: "_top" } do %>
        <i class="fas fa-trash"></i>
      <% end %>
    </div>
  </td>
</tr>
