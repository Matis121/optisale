<div class="min-h-screen flex items-center justify-center bg-base-300 p-4 flex-col">
  <div class="flex flex-col items-center justify-center mb-4 text-green-400 text-sm">
    <span class="font-bold">Konto testowe</span>
    <span>test@test.me / testowe1</span>
  </div>
  <div class="card w-full max-w-md bg-base-100 shadow-xl">
    <div class="card-body">
      <!-- Header -->
      <div class="text-center mb-6">
        <h1 class="text-2xl font-bold text-base-content">Optisale</h1>
        <p class="text-base-content/60 mt-2">Zaloguj się do swojego konta</p>
      </div>
      <!-- Login Form -->
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-control">
          <%= f.label :email, class: "label" do %>
            <span class="label-text">Email</span>
          <% end %>
          <%= f.email_field :email, 
              autofocus: true, 
              autocomplete: "email", 
              class: "input input-bordered w-full",
              placeholder: "twoj@email.com" %>
        </div>
        <div class="form-control mt-4">
          <%= f.label :password, class: "label" do %>
            <span class="label-text">Hasło</span>
          <% end %>
          <%= f.password_field :password, 
              autocomplete: "current-password", 
              class: "input input-bordered w-full",
              placeholder: "••••••••" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-control mt-4">
            <label class="label cursor-pointer justify-start gap-3">
              <%= f.check_box :remember_me, class: "checkbox checkbox-primary" %>
              <span class="label-text">Zapamiętaj mnie</span>
            </label>
          </div>
        <% end %>
        <div class="form-control mt-6">
          <%= f.submit "Zaloguj się", class: "btn btn-primary w-full" %>
        </div>
      <% end %>
      <!-- Links -->
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>