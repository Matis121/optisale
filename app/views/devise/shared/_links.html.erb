<div class="flex flex-col items-center gap-3 mt-6">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Zaloguj się", new_session_path(resource_name), class: "link link-primary hover:link-primary-focus transition-colors" %>
  <% end %>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Nie masz konta? Utwórz je teraz", new_registration_path(resource_name), class: "link link-primary hover:link-primary-focus transition-colors" %>
  <% end %>
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Zapomniałeś hasła?", new_password_path(resource_name), class: "link link-primary hover:link-primary-focus transition-colors" %>
  <% end %>
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Nie otrzymałeś instrukcji potwierdzenia?", new_confirmation_path(resource_name), class: "link link-primary hover:link-primary-focus transition-colors" %>
  <% end %>
  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Nie otrzymałeś instrukcji odblokowania?", new_unlock_path(resource_name), class: "link link-primary hover:link-primary-focus transition-colors" %>
  <% end %>
  <%- if devise_mapping.omniauthable? %>
    <div class="divider">lub</div>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Zaloguj się przez #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), 
          data: { turbo: false }, 
          class: "btn btn-outline btn-primary gap-2" do %>
        <i class="fab fa-<%= provider.downcase %>"></i>
        <%= OmniAuth::Utils.camelize(provider) %>
      <% end %>
    <% end %>
  <% end %>
</div>
