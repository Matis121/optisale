<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-primary/10 via-base-300 to-secondary/10 p-4 flex-col relative overflow-hidden">
  <!-- Decorative Elements -->
  <div class="absolute top-0 left-0 w-72 h-72 bg-primary/20 rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2"></div>
  <div class="absolute bottom-0 right-0 w-96 h-96 bg-secondary/20 rounded-full blur-3xl translate-x-1/3 translate-y-1/3"></div>
  <!-- Registration Card -->
  <div class="card w-full max-w-md bg-base-100/95 backdrop-blur-sm shadow-2xl border border-base-300/50 z-10">
    <div class="card-body p-8">
      <!-- Header with Icon -->
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
          Optisale
        </h1>
        <p class="text-base-content/60 mt-2 text-sm">Utwórz nowe konto</p>
      </div>
      <!-- Registration Form -->
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <!-- Company Name Field -->
        <div class="form-control">
          <%= f.label :account_name, class: "label" do %>
            <span class="label-text">Nazwa firmy</span>
          <% end %>
          <div class="relative">
            <span class="absolute inset-y-0 left-0 flex items-center pl-4 text-primary z-10 pointer-events-none">
              <i class="fas fa-building"></i>
            </span>
            <%= f.text_field :account_name, 
                autofocus: true, 
                autocomplete: "organization", 
                class: "input input-bordered w-full pl-12 focus:input-primary transition-all",
                placeholder: "Nazwa firmy",
                required: true %>
          </div>
        </div>
        <!-- NIP Field -->
        <div class="form-control mt-4">
          <%= f.label :account_nip, class: "label" do %>
            <span class="label-text">NIP</span>
          <% end %>
          <div class="relative">
            <span class="absolute inset-y-0 left-0 flex items-center pl-4 text-primary z-10 pointer-events-none">
              <i class="fas fa-file-alt"></i>
            </span>
            <%= f.text_field :account_nip, 
                autocomplete: "off", 
                class: "input input-bordered w-full pl-12 focus:input-primary transition-all",
                placeholder: "1234567890",
                required: true %>
          </div>
        </div>
        <!-- Email Field -->
        <div class="form-control mt-4">
          <%= f.label :email, class: "label" do %>
            <span class="label-text">Email</span>
          <% end %>
          <div class="relative">
            <span class="absolute inset-y-0 left-0 flex items-center pl-4 text-primary z-10 pointer-events-none">
              <i class="fas fa-at"></i>
            </span>
            <%= f.email_field :email, 
                autocomplete: "email", 
                class: "input input-bordered w-full pl-12 focus:input-primary transition-all",
                placeholder: "twoj@email.com",
                required: true %>
          </div>
        </div>
        <!-- Password Field -->
        <div class="form-control mt-4">
          <%= f.label :password, class: "label" do %>
            <span class="label-text">
              Hasło
              <% if @minimum_password_length %>
                <span class="text-xs text-base-content/60">(minimum <%= @minimum_password_length %> znaków)</span>
              <% end %>
            </span>
          <% end %>
          <div class="relative">
            <span class="absolute inset-y-0 left-0 flex items-center pl-4 text-primary z-10 pointer-events-none">
              <i class="fas fa-lock"></i>
            </span>
            <%= f.password_field :password, 
                autocomplete: "new-password", 
                class: "input input-bordered w-full pl-12 focus:input-primary transition-all",
                placeholder: "••••••••" %>
          </div>
        </div>
        <!-- Password Confirmation Field -->
        <div class="form-control mt-4">
          <%= f.label :password_confirmation, class: "label" do %>
            <span class="label-text">Potwierdź hasło</span>
          <% end %>
          <div class="relative">
            <span class="absolute inset-y-0 left-0 flex items-center pl-4 text-primary z-10 pointer-events-none">
              <i class="fas fa-check-circle"></i>
            </span>
            <%= f.password_field :password_confirmation, 
                autocomplete: "new-password", 
                class: "input input-bordered w-full pl-12 focus:input-primary transition-all",
                placeholder: "••••••••" %>
          </div>
        </div>
        <!-- Submit Button -->
        <div class="form-control mt-6">
          <%= f.submit "Utwórz konto", class: "btn btn-primary w-full gap-2 shadow-lg hover:shadow-xl transition-all" %>
        </div>
      <% end %>
      <!-- Divider -->
      <div class="divider text-xs text-base-content/40 my-6">już masz konto?</div>
      <!-- Links -->
      <div class="text-center space-y-2">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
  <!-- Footer -->
  <div class="mt-6 text-center text-sm text-base-content/40 z-10">
    <p>&copy; <%= Time.current.year %> Optisale. Wszystkie prawa zastrzeżone.</p>
  </div>
</div>