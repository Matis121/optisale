<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-primary/10 via-base-300 to-secondary/10 p-4 flex-col relative overflow-hidden">
  <!-- Decorative Elements -->
  <div class="absolute top-0 left-0 w-72 h-72 bg-primary/20 rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2"></div>
  <div class="absolute bottom-0 right-0 w-96 h-96 bg-secondary/20 rounded-full blur-3xl translate-x-1/3 translate-y-1/3"></div>
  <!-- Profile Edit Card -->
  <div class="card w-full max-w-md bg-base-100/95 backdrop-blur-sm shadow-2xl border border-base-300/50 z-10">
    <div class="card-body p-8">
      <!-- Header with Icon -->
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
          Optisale
        </h1>
        <p class="text-base-content/60 mt-2 text-sm">Edytuj profil</p>
      </div>

      <!-- Flash Messages -->
      <% if flash[:alert].present? %>
        <div class="alert alert-error mb-6" role="alert">
          <i class="fas fa-exclamation-circle"></i>
          <span><%= flash[:alert] %></span>
        </div>
      <% end %>

      <% if flash[:notice].present? %>
        <div class="alert alert-info mb-6" role="alert">
          <i class="fas fa-info-circle"></i>
          <span><%= flash[:notice] %></span>
        </div>
      <% end %>

      <!-- Profile Edit Form -->
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, data: { turbo: false }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <!-- Email Field -->
        <div class="form-control">
          <%= f.label :email, class: "label" do %>
            <span class="label-text">Email</span>
          <% end %>
          <div class="relative">
            <span class="absolute inset-y-0 left-0 flex items-center pl-4 text-primary z-10 pointer-events-none">
              <i class="fas fa-at"></i>
            </span>
            <%= f.email_field :email, 
                autofocus: true, 
                autocomplete: "email", 
                class: "input input-bordered w-full pl-12 focus:input-primary transition-all",
                placeholder: "twoj@email.com" %>
          </div>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="alert alert-info mt-4 text-sm">
            <i class="fas fa-info-circle"></i>
            <span>Oczekuje na potwierdzenie: <%= resource.unconfirmed_email %></span>
          </div>
        <% end %>
        <!-- Password Change Section -->
        <div class="divider text-xs text-base-content/40 my-6">Zmiana hasła (opcjonalne)</div>
        <!-- New Password Field -->
        <div class="form-control">
          <%= f.label :password, class: "label" do %>
            <span class="label-text">Nowe hasło</span>
            <span class="label-text-alt text-xs text-base-content/60">(zostaw puste)</span>
          <% end %>
          <div class="relative">
            <span class="absolute inset-y-0 left-0 flex items-center pl-4 text-primary z-10 pointer-events-none">
              <i class="fas fa-lock"></i>
            </span>
            <%= f.password_field :password, 
                autocomplete: "new-password", 
                class: "input input-bordered w-full pl-12 focus:input-primary transition-all",
                placeholder: "••••••••" %>
          </div>
          <% if @minimum_password_length %>
            <label class="label">
              <span class="label-text-alt text-xs text-base-content/60">Minimum <%= @minimum_password_length %> znaków</span>
            </label>
          <% end %>
        </div>
        <!-- Password Confirmation Field -->
        <div class="form-control mt-4">
          <%= f.label :password_confirmation, class: "label" do %>
            <span class="label-text">Potwierdź nowe hasło</span>
          <% end %>
          <div class="relative">
            <span class="absolute inset-y-0 left-0 flex items-center pl-4 text-primary z-10 pointer-events-none">
              <i class="fas fa-check-circle"></i>
            </span>
            <%= f.password_field :password_confirmation, 
                autocomplete: "new-password", 
                class: "input input-bordered w-full pl-12 focus:input-primary transition-all",
                placeholder: "••••••••" %>
          </div>
        </div>
        <!-- Current Password Field -->
        <div class="form-control mt-6">
          <%= f.label :current_password, class: "label" do %>
            <span class="label-text">Aktualne hasło</span>
            <span class="label-text-alt text-xs text-base-content/60">(wymagane)</span>
          <% end %>
          <div class="relative">
            <span class="absolute inset-y-0 left-0 flex items-center pl-4 text-primary z-10 pointer-events-none">
              <i class="fas fa-key"></i>
            </span>
            <%= f.password_field :current_password, 
                autocomplete: "current-password", 
                class: "input input-bordered w-full pl-12 focus:input-primary transition-all",
                placeholder: "••••••••" %>
          </div>
        </div>
        <!-- Submit Button -->
        <div class="form-control mt-6">
          <%= f.submit "Zaktualizuj profil", class: "btn btn-primary w-full gap-2 shadow-lg hover:shadow-xl transition-all" %>
        </div>
      <% end %>
      <!-- Back Link -->
      <div class="text-center mt-6">
        <%= link_to "Powrót", :back, class: "link link-primary hover:link-primary-focus transition-colors text-sm" %>
      </div>
      <!-- Account Deletion Section -->
      <div class="divider text-xs text-base-content/40 my-6">Zarządzanie kontem</div>
      <div class="text-center">
        <p class="text-sm text-base-content/60 mb-4">Niezadowolony? Możesz usunąć swoje konto</p>
        <%= button_to "Usuń moje konto", 
            registration_path(resource_name), 
            data: { confirm: "Czy na pewno? Tej operacji nie można cofnąć.", turbo_confirm: "Czy na pewno? Tej operacji nie można cofnąć." }, 
            method: :delete, 
            class: "btn btn-error btn-outline btn-sm gap-2 hover:shadow-lg transition-all" %>
      </div>
    </div>
  </div>
  <!-- Footer -->
  <div class="mt-6 text-center text-sm text-base-content/40 z-10">
    <p>&copy; <%= Time.current.year %> Optisale. Wszystkie prawa zastrzeżone.</p>
  </div>
</div>